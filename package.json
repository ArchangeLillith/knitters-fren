{
	"name": "knitters-fren",
	"version": "1.0.0",
	"description": "An app that holds all your knitting patterns with a Nanachi flair",
	"main": "dist/server.js",
	"scripts": {
		"watch:client": "node esbuild-config/client.dev.mjs",
		"watch:server": "node esbuild-config/server.dev.mjs",
		"watch:restart-server": "nodemon --config nodemon.json",
		"dev": "npm-run-all --parallel watch:*",
		"serve:client": "serve public -l 8000",
		"build:client": "node esbuild-config/client.prod.mjs",
		"build:server": "node esbuild-config/server.prod.mjs",
		"build": "npm-run-all --sequential build:*",
		"lint": "npx eslint . --ext .js,.jsx,.ts,.tsx",
		"lint:debug": "npx eslint . --ext .js,.jsx,.ts,.tsx --debug"
	},
	"engines": {
		"node": "20.x"
	},
	"keywords": [
		"typescript",
		"react",
		"express",
		"esbuild",
		"boilerplate",
		"Made in Abyss"
	],
	"author": "Aria Walford",
	"license": "MIT",
	"dependencies": {
		"bcrypt": "^5.1.1",
		"bootstrap": "^5.3.1",
		"cors": "^2.8.5",
		"dayjs": "^1.11.11",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"form-data": "^4.0.0",
		"js-cookie": "^3.0.5",
		"jsonwebtoken": "^9.0.2",
		"jwt-decode": "^4.0.0",
		"morgan": "^1.10.0",
		"mysql2": "^3.11.0",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^5.2.1",
		"react-router-dom": "^6.4.0",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/cors": "^2.8.13",
		"@types/eslint-plugin-security": "^3.0.0",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/morgan": "^1.9.9",
		"@types/mysql": "^2.15.26",
		"@types/node": "^20.16.5",
		"@types/passport": "^1.0.16",
		"@types/passport-jwt": "^4.0.1",
		"@types/passport-local": "^1.0.38",
		"@types/react": "^18.2.20",
		"@types/react-dom": "^18.2.7",
		"@types/react-router-dom": "^5.3.3",
		"@types/uuid": "^9.0.8",
		"@typescript-eslint/eslint-plugin": "^8.7.0",
		"@typescript-eslint/parser": "^8.7.0",
		"esbuild": "^0.19.2",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.30.0",
		"eslint-plugin-jsx-a11y": "^6.10.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-promise": "^7.1.0",
		"eslint-plugin-react": "^7.36.1",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-security": "^3.0.1",
		"nodemon": "^3.0.1",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.1.6"
	}
}
